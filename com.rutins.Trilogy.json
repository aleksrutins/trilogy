{
    "app-id" : "com.rutins.Trilogy",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "command" : "com.rutins.Trilogy",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.6.0"
                }
            ]
        },
        {
            "name": "postgres",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.postgresql.org/pub/source/v15.2/postgresql-15.2.tar.bz2",
                    "sha256": "99a2171fc3d6b5b5f56b757a7a3cb85d509a38e4273805def23941ed2b8468c7"
                }
            ]
        },
        {
            "name" : "kaste",
            "buildsystem": "meson",
            "sources" : [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/aleksrutins/kaste"
                }
	    ]
	},
        {
            "name" : "spectrum",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/aleksrutins/spectrum.git"
                }
            ]
        },
        {
            "name" : "trilogy",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/aleksrutins/trilogy.git",
                    "tag": "v0.1.0"
                }
            ]
        }
    ]
}